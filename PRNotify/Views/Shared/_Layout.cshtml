                    <li class="nav-item"><a class="nav-link" href="/Calendar">ปฏิทิน</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Account/Login">เข้าสู่ระบบ</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>