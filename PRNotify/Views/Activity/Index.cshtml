@model IEnumerable<PRNotify.Models.Activity>
@{
    ViewData["Title"] = "รายการกิจกรรม";
}
<h2 class="my-4">รายการกิจกรรม</h2>
<a asp-action="Create" class="btn btn-success mb-3">แจ้งประชาสัมพันธ์ใหม่</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>หัวข้อ</th>
            <th>วันที่</th>
            <th>ผู้แจ้ง</th>
            <th>สถานะ</th>
            <th>จัดการ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.ActivityName</td>
                <td>@a.ActivityDate.ToShortDateString()</td>
                <td>@a.User?.FirstName @a.User?.LastName</td>
                <td>@a.Status</td>
                <td>
                    @if (a.Status == PRNotify.Models.ActivityStatus.pending)
                    {
                        <form asp-action="ChangeStatus" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@a.ActivityId" />
                            <input type="hidden" name="status" value="in_progress" />
                            <button type="submit" class="btn btn-primary btn-sm">กำลังดำเนินการ</button>
                        </form>
                    }
                    @if (a.Status == PRNotify.Models.ActivityStatus.in_progress)
                    {
                        <form asp-action="ChangeStatus" method="post" style="display:inline">
                            <input type="hidden" name="id" value="@a.ActivityId" />
                            <input type="hidden" name="status" value="completed" />
                            <button type="submit" class="btn btn-success btn-sm">จบงาน</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>