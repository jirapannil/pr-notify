@model IEnumerable<PRNotify.Models.User>
@{
    ViewData["Title"] = "จัดการผู้ใช้งาน";
}

<h2 class="my-4">จัดการผู้ใช้งาน</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ชื่อผู้ใช้</th>
            <th>ชื่อ - นามสกุล</th>
            <th>กลุ่มงาน</th>
            <th>สิทธิ์</th>
            <th>สถานะ</th>
            <th>จัดการ</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Username</td>
                <td>@u.FirstName @u.LastName</td>
                <td>@u.Department?.DepartmentName</td>
                <td>@u.Role?.RoleName</td>
                <td>@u.Status</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@u.UserId" class="btn btn-warning btn-sm">แก้ไข</a>
                    <form asp-action="Delete" asp-route-id="@u.UserId" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('ยืนยันลบ?')">ลบ</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>